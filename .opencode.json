{
  "data": {
    "directory": ".opencode"
  },
  "agents": {
    "primary": {
      "model": "bedrock.claude-3.7-sonnet",
      "maxTokens": 5000,
      "reasoningEffort": ""
    },
    "task": {
      "model": "bedrock.claude-3.7-sonnet",
      "maxTokens": 5000,
      "reasoningEffort": ""
    },
    "title": {
      "model": "bedrock.claude-3.7-sonnet",
      "maxTokens": 80,
      "reasoningEffort": ""
    }
  },
  "mcpServers": {
    "Sentry": {
      "command": "npx",
      "env": null,
      "args": [
        "mcp-remote@latest",
        "https://mcp.sentry.dev/sse"
      ],
      "type": "",
      "url": "",
      "headers": null
    }
  },
  "lsp": {
    "python": {
      "enabled": true,
      "command": "basedpyright",
      "args": [
        "-"
      ],
      "options": null
    },
    "rust": {
      "enabled": true,
      "command": "rust-analyzer",
      "args": [
        "parse",
        "--no-dump"
      ],
      "options": null
    },
    "typescript": {
      "enabled": true,
      "command": "typescript-language-server",
      "args": [
        "--stdio"
      ],
      "options": null
    }
  },
  "shell": {
    "path": "/bin/zsh"
  }
}
