{
  "$schema": "http://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoshare": false,
  "autoupdate": true,
  "disabled_providers": [
    "openai"
  ],
  "mcp": {
    "hdm": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote@latest",
        "http://localhost:8000/mcp"
      ]
    },
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/sse"
      ]
    }
  }
}
