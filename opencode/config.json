{
  "$schema": "http://opencode.ai/config.json",
  "theme": "tokyonight",
  "share": "manual",
  "autoupdate": true,
  "disabled_providers": [
    "openai"
  ],
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--browserUrl",
        "http://localhost:12345"
      ]
    },
    "sentry": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/sse"
      ]
    }
  }
}
